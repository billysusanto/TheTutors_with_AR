<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".view.InputName">

    <TextView android:text="Input Your Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="67dp"
        android:layout_above="@+id/userNameInput"
        android:layout_centerHorizontal="true"
        android:textSize="25dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/userNameInput"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:gravity="top|center_vertical|center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start the Tutorial"
        android:id="@+id/startTutorial"
        android:layout_below="@+id/userNameInput"
        android:layout_marginTop="63dp"
        android:layout_alignRight="@+id/userNameInput"
        android:layout_alignLeft="@+id/userNameInput" />

</RelativeLayout>
